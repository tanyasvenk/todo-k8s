{
  "info": {
    "name": "Todo App Collection",
    "_postman_id": "todo-app-collection",
    "description": "Коллекция для тестирования Todo-приложения с MongoDB",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Test task\",\n  \"completed\": false\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:52121/todos",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "52121",
          "path": ["todos"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"todo_id\", jsonData._id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Get All Todos",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:52121/todos",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "52121",
          "path": ["todos"]
        }
      },
      "response": []
    },
    {
      "name": "Get Todo By ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:52121/todos/{{todo_id}}",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "52121",
          "path": ["todos", "{{todo_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update Todo By ID",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"completed\": true\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:52121/todos/{{todo_id}}",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "52121",
          "path": ["todos", "{{todo_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Todo By ID",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:52121/todos/{{todo_id}}",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "52121",
          "path": ["todos", "{{todo_id}}"]
        }
      },
      "response": []
    }
  ]
}
